{% extends 'base.html.twig' %}

{% block title %}Liste des projets - TaskLinker{% endblock %}


{% block extra_header %}
<h1>Projets</h1>
{% endblock %}
{% block body %}



        
    
<div id="content">
    <div id="projects-container">
        {% for projet in projets %}
            <article class="card-project">
                <a href="{{path('app_projet_detail', {id: projet.id})}}">
                    <h2>{{projet.titre}}</h2>
                </a>
                <div class="card-project-icons">
                    <a href="{{path('app_projet_detail', {id:projet.id })}}"><i class="fa-solid fa-pen"></i></a>
                    <a href="{{ path('app_projet_archiver', { id: projet.id }) }}"><i class="fa-solid fa-trash"></i></a>
                </div>
            </article>
        {% else %}
            <p>Aucun enregistrement en base de donn√©es</p>
        {% endfor %}
            <article class="card-project">
                <a href="{{path('app_projet_ajouter')}}">
                    <i class="fa-solid fa-circle-plus add-project-icon"></i>
                    <h2>Ajouter un projet</h2>
                </a>
            </article>
    </div>

{% endblock %}
